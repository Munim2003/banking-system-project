<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="group_5.banking_system_application.Ui.DashboardController"
           stylesheets="@../Styles/style.css"
           style="-fx-padding:30;"
            styleClass="outback">

    <!-- Big Card -->
    <HBox styleClass="inback" spacing="-NaN">

        <!-- LEFT NAVBAR -->
        <fx:include source="navbar.fxml" />

        <!-- RIGHT CONTENT (auto expands) -->
