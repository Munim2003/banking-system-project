                       prefWidth="380"
                       maxHeight="Infinity"
                       maxWidth="Infinity">
            </StackPane>
        </VBox>

        <VBox styleClass="card" spacing="12" prefHeight="220"
              prefWidth="260"
              alignment="TOP_CENTER"
              style="-fx-padding: 18 22 22 22">
