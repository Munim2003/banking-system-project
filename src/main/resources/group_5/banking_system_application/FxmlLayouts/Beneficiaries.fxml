<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="group_5.banking_system_application.Ui.BeneficiaryController"
      spacing="12"
      styleClass="content-root">

    <padding>
        <Insets top="12" right="16" bottom="12" left="16"/>
    </padding>

    <children>

        <!-- ─── Top bar: title + search ───────────────────────────── -->
        <HBox spacing="10" alignment="CENTER_LEFT" styleClass="top-bar">
            <Label text="Beneficiaries" styleClass="page-title"/>

            <Region HBox.hgrow="ALWAYS"/>

            <TextField fx:id="searchField"
                       promptText="Search beneficiary by name or account"
                       HBox.hgrow="ALWAYS"
                       styleClass="search-field"/>

            <Button fx:id="searchButton"
                    text="Search"
                    styleClass="secondary-btn"
            onAction="#search"/>
        </HBox>

        <!-- ─── Beneficiaries table ───────────────────────────────── -->
        <TableView fx:id="beneficiaryTable"
                   VBox.vgrow="ALWAYS"
                   fixedCellSize="40"
                   styleClass="table-card">

            <columns>
                <TableColumn fx:id="beneficiaryNameColumn"
                             text="Beneficiary"
                             prefWidth="220"/>

                <TableColumn fx:id="emailColumn"
                             text="Email"
                             prefWidth="220"/>

                <TableColumn fx:id="accountNumberColumn"
                             text="Account #"
                             prefWidth="200"/>

                <TableColumn fx:id="beneficiaryIdColumn"
                             text="Beneficiary ID"
                             prefWidth="180"/>
            </columns>

        </TableView>

    </children>
</VBox>
